<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="O intrebare simpla care este aceasta?"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/btn_select_knw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tq" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/btn_select_knw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tq" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/btn_select_knw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i2" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/btn_select_knw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i1" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="raunul 1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/i1"
        app:layout_constraintEnd_toEndOf="@+id/i1"
        app:layout_constraintStart_toStartOf="@+id/i1"
        app:layout_constraintTop_toTopOf="@+id/i1" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="raunul 2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/i2"
        app:layout_constraintEnd_toEndOf="@+id/i2"
        app:layout_constraintStart_toStartOf="@+id/i2"
        app:layout_constraintTop_toTopOf="@+id/i2" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="raunul 3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/i3"
        app:layout_constraintEnd_toEndOf="@+id/i3"
        app:layout_constraintStart_toStartOf="@+id/i3"
        app:layout_constraintTop_toTopOf="@+id/i3" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="raunul 1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/i4"
        app:layout_constraintEnd_toEndOf="@+id/i4"
        app:layout_constraintStart_toStartOf="@+id/i4"
        app:layout_constraintTop_toTopOf="@+id/i4" />

    <LinearLayout
        android:id="@+id/r1"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#72F41414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i1"
        app:layout_constraintEnd_toEndOf="@+id/i1"
        app:layout_constraintStart_toStartOf="@+id/i1"
        app:layout_constraintTop_toTopOf="@+id/i1" />

    <LinearLayout
        android:id="@+id/v1"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#7245F414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i1"
        app:layout_constraintEnd_toEndOf="@+id/i1"
        app:layout_constraintStart_toStartOf="@+id/i1"
        app:layout_constraintTop_toTopOf="@+id/i1" />

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#72F41414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i2"
        app:layout_constraintEnd_toEndOf="@+id/i2"
        app:layout_constraintStart_toStartOf="@+id/i2"
        app:layout_constraintTop_toTopOf="@+id/i2" />

    <LinearLayout
        android:id="@+id/v2"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#7245F414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i2"
        app:layout_constraintEnd_toEndOf="@+id/i2"
        app:layout_constraintStart_toStartOf="@+id/i2"
        app:layout_constraintTop_toTopOf="@+id/i2" />

    <LinearLayout
        android:id="@+id/r3"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#72F41414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i3"
        app:layout_constraintEnd_toEndOf="@+id/i3"
        app:layout_constraintStart_toStartOf="@+id/i3"
        app:layout_constraintTop_toTopOf="@+id/i3" />

    <LinearLayout
        android:id="@+id/v3"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#7245F414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i3"
        app:layout_constraintEnd_toEndOf="@+id/i3"
        app:layout_constraintStart_toStartOf="@+id/i3"
        app:layout_constraintTop_toTopOf="@+id/i3" />

    <LinearLayout
        android:id="@+id/r4"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#72F41414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i4"
        app:layout_constraintEnd_toEndOf="@+id/i4"
        app:layout_constraintStart_toStartOf="@+id/i4"
        app:layout_constraintTop_toTopOf="@+id/i4" />

    <LinearLayout
        android:id="@+id/v4"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="#7245F414"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/i4"
        app:layout_constraintEnd_toEndOf="@+id/i4"
        app:layout_constraintStart_toStartOf="@+id/i4"
        app:layout_constraintTop_toTopOf="@+id/i4" />

</androidx.constraintlayout.widget.ConstraintLayout>